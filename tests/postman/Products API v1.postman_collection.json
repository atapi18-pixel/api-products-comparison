{
  "info": {
    "_postman_id": "products-api-v1-collection",
    "name": "Products API v1",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0",
    "description": "Collection to test the Products API (v1) endpoints located under /v1/products"
  },
  "item": [
    {
      "name": "Get paginated products",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/v1/products?page=1&page_size=10",
          "protocol": "http",
          "host": ["{{host}}"],
          "port": "{{port}}",
          "path": ["v1", "products"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "page_size", "value": "10" }
          ]
        },
        "description": "Retrieve the default paginated list of products. Use query params `page` and `page_size`."
      },
      "response": []
    },
    {
      "name": "Get paginated products (with X-Delay)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" },
          { "key": "X-Delay", "value": "5", "type": "text" }
        ],
        "url": {
          "raw": "{{base_url}}/v1/products?page=1&page_size=10",
          "protocol": "http",
          "host": ["{{host}}"],
          "port": "{{port}}",
          "path": ["v1", "products"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "page_size", "value": "10" }
          ]
        },
        "description": "Test endpoint with 5 second delay using X-Delay header to trigger timeout alerts."
      },
      "response": []
    },
    {
      "name": "Get paginated products - invalid page_size",
      "request": {
        "method": "GET",
        "header": [ { "key": "Accept", "value": "application/json" } ],
        "url": {
          "raw": "{{base_url}}/v1/products?page=1&page_size=1000",
          "protocol": "http",
          "host": ["{{host}}"],
          "port": "{{port}}",
          "path": ["v1", "products"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "page_size", "value": "1000" }
          ]
        },
        "description": "Send an invalid `page_size` (exceeds max) to exercise validation response (expect 422)."
      },
      "response": []
    },
    {
      "name": "OpenAPI (openapi.json)",
      "request": {
        "method": "GET",
        "header": [ { "key": "Accept", "value": "application/json" } ],
        "url": {
          "raw": "{{base_url}}/openapi.json",
          "protocol": "http",
          "host": ["{{host}}"],
          "port": "{{port}}",
          "path": ["openapi.json"]
        },
        "description": "Fetch the OpenAPI JSON produced by the running app. Useful to inspect schema."
      },
      "response": []
    },
    {
      "name": "Swagger UI (docs)",
      "request": {
        "method": "GET",
        "header": [ { "key": "Accept", "value": "text/html" } ],
        "url": {
          "raw": "{{base_url}}/docs",
          "protocol": "http",
          "host": ["{{host}}"],
          "port": "{{port}}",
          "path": ["docs"]
        },
        "description": "Open the interactive Swagger UI page."
      },
      "response": []
    }
  ],
  "event": [],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "host",
      "value": "localhost",
      "type": "string"
    },
    {
      "key": "port",
      "value": "8000",
      "type": "string"
    }
  ]
}
